<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/covidCasesFragment">

    <fragment
        android:id="@+id/aboutCovidFragment"
        android:name="com.example.covid19.ui.fragments.AboutCovidFragment"
        android:label="AboutCovidFragment"
        tools:layout="@layout/fragment_about_covid">
        <action
            android:id="@+id/action_aboutCovidFragment_to_covidCasesFragment"
            app:destination="@id/covidCasesFragment"
            app:popUpTo="@id/aboutCovidFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/covidCasesFragment"
        android:name="com.example.covid19.ui.fragments.CovidCasesFragment"
        android:label="CovidCasesFragment"
        tools:layout="@layout/fragment_covid_cases">
        <action
            android:id="@+id/action_covidCasesFragment_to_aboutCovidFragment"
            app:destination="@id/aboutCovidFragment"
            app:popUpTo="@id/covidCasesFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>